<%= javascript_include_tag "messages" %>

<%= form_for(message, :url => {:action => "create"}) do |f| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being sent:</h2>

      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :subject, class: "control-label" %>
    <%= f.text_field :subject, class: "form-control", maxlength: 62 %>

    <small>Characters remaining: <span id="message_subject_counter" data-maximum-length=62>62</span></small>
  </div>

  <div class="form-group">
    <%= f.label :body, class: "control-label" %>
    <%= f.text_area :body, class: "form-control", maxlength: 235 %>

    <small>Characters remaining: <span id="message_body_counter" data-maximum-length=235>235</span></small>
  </div>

  <div class="actions">
    <%= f.submit "Send Message", class: "btn btn-primary", data: { confirm: 'Are you sure you are sure?' } %>
  </div>
<% end %>

